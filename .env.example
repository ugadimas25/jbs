# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# Session Secret (IMPORTANT: Generate a unique random string for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-unique-session-secret-here

# Node Environment (development | production)
NODE_ENV=production

# Server Port
PORT=5001

# Brevo SMTP Configuration
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=your-brevo-user
BREVO_SMTP_PASS=your-brevo-api-key
BREVO_FROM_EMAIL=your-email@domain.com
BREVO_FROM_NAME=Jakarta Beauty School

# Application URL (use your domain in production)
APP_URL=https://yourdomain.com
# Tencent Cloud Object Storage (COS)
TENCENT_COS_SECRET_ID=your-cos-secret-id
TENCENT_COS_SECRET_KEY=your-cos-secret-key
TENCENT_COS_REGION=ap-singapore
TENCENT_COS_BUCKET=your-bucket-name
TENCENT_COS_URL=https://your-bucket.cos.ap-singapore.myqcloud.com